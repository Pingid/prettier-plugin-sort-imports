{
  "name": "@pingid/prettier-plugin-sort-imports",
  "version": "0.0.9",
  "description": "A tiny Prettier plugin that keeps your import statements tidy.",
  "author": "Dan Beaven <dm.beaven@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pingid/prettier-plugin-sort-imports.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsc && unbuild",
    "format": "prettier --write .",
    "test": "node tests/run.test.ts",
    "bench": "node bench/run.ts",
    "bench:update": "npm run build && node bench/run.ts --update"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "tinybench": "^4.0.1",
    "typescript": "^5.8.3",
    "prettier": "^3.5.3",
    "unbuild": "^3.5.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "ignore": [
      "tests/**/*"
    ]
  }
}
